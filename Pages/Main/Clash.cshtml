@page
@model LoL1Shot.Pages.Main.ClashModel
<style>
    #grid {
        display: grid;
        height: 50px;
        width: 400px;
        grid-template-columns: repeat(8, 1fr);
        grid-template-rows: 50px;
    }

    #actionImage {
        background-image: url("images/imageError.jpg");
        background-size: 50px 50px;
    }
</style>

<link rel="stylesheet" href="~/css/buttonAnimated.css" />
<h2>Lista 1shot'ów'</h2>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Atakujący</th>
            <th scope="col"></th>
            <th scope="col">Zabity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (string key in Model.killedByComboKeys)
        {
            @if (key != "")
            {
                <tr>
                    <th>
                        <img src=@Model._actionDB.GetChampionImageURL(Model.Combo.championKey)
                             alt="~/images/imageError.jpg" width="60" height="60" />
                    </th>
                    <td>kills</td>
                    <th>
                        <img src=@Model._actionDB.GetChampionImageURL(key)
                             alt="~/images/imageError.jpg" width="60" height="60" />
                    </th>
                </tr>
            }
        }
    </tbody>
</table>